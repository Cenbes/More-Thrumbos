<Defs>
  
  <ThingDef ParentName="ResourceVerbBase">
    <defName>GingerThrumboHorn</defName>
    <label>ginger thrumbo horn</label>
    <description>A Ginger Thrumbo's horn. It's razor-sharp, steel-hard, and priceless in most markets. This is a really true trophy, as well as a more then deadly melee weapon.</description>
    <graphicData>
      <texPath>MoreThrumbos_Items/GingerThrumbo_Horn/GingerThrumboHorn</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <equippedAngleOffset>-20</equippedAngleOffset>
    <statBases>
      <MarketValue>1200</MarketValue>
      <MaxHitPoints>250</MaxHitPoints>
      <Mass>2</Mass>
      <Flammability>0.1</Flammability>
      <DeteriorationRate>0.1</DeteriorationRate>
    </statBases>
    <resourceReadoutPriority>Middle</resourceReadoutPriority>
    <stackLimit>25</stackLimit>
    <tools>
      <li>
        <label>point</label>
        <capacities>
          <li>Scratch</li>
          <li>Stab</li>
        </capacities>
        <power>38</power>
        <cooldownTime>1.4</cooldownTime>
      </li>
      <li>
        <label>base</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>15</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
    <thingCategories>
      <li>Items</li>
    </thingCategories>
    <tradeTags>
      <li>ExoticMisc</li>
    </tradeTags>
    <thingSetMakerTags>
      <li>AnimalPart</li>
    </thingSetMakerTags>
  </ThingDef>
  
